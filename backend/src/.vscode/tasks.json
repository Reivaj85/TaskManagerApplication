{ 
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": ["build"],
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run",
      "command": "dotnet",
      "type": "shell",
      "args": ["run", "--project", "TaskManager.API"],
      "group": "build",
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "shell",
      "args": ["test"],
      "group": "test",
      "problemMatcher": "$msCompile"
    }
  ]
}
